---
// File: src/components/FeaturedCard.astro
interface Props {
  title: string;
  imageUrl: string;
  href: string;
  synopsis: string;
}

const { title, imageUrl, href, synopsis } = Astro.props;

// Rút gọn tóm tắt để không quá dài
const shortSynopsis = synopsis.split(' ').slice(0, 30).join(' ') + '...';
---
<div class="relative w-full h-80 rounded-lg overflow-hidden shadow-2xl mb-12">
  <!-- Ảnh nền -->
  <img src={imageUrl} alt={title} class="absolute inset-0 w-full h-full object-cover object-center" />
  
  <!-- Lớp phủ Gradient để làm nổi bật chữ -->
  <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/80 to-transparent"></div>

  <!-- Nội dung text -->
  <div class="relative h-full flex flex-col justify-end p-8 text-white">
    <h2 class="text-4xl font-bold mb-2">{title}</h2>
    <p class="text-gray-300 max-w-2xl mb-4 text-sm hidden md:block">{shortSynopsis}</p>
    <a href={href} class="bg-cyan-500 hover:bg-cyan-400 text-white font-bold py-2 px-4 rounded-lg transition-colors w-fit">
      Xem chi tiết
    </a>
  </div>
</div>