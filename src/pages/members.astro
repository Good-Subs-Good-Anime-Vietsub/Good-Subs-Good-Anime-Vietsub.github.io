---
import Layout from '../layouts/Layout.astro';
import allMembers from '../data/members.json';
import SocialIcon from '../components/SocialIcon.astro';

const coreMembers = allMembers.filter(member => member.type === 'core');
const externalMembers = allMembers
  .filter(member => member.type === 'external')
  .sort((a, b) => {
    // Prioritize highlighted members
    if (a.highlight && !b.highlight) return -1;
    if (!a.highlight && b.highlight) return 1;

    // Then, sort alphabetically by name
    return a.name.localeCompare(b.name);
  });
---

<Layout
  title="Thành viên | GSGA Fansub"
  description="Gặp gỡ đội ngũ của GSGA Fansub. Danh sách các thành viên chính thức và các cộng tác viên đã góp sức tạo nên những bản Vietsub chất lượng."
>
  <div class="max-w-4xl mx-auto py-12 px-4">
    <h1 class="text-4xl font-bold text-white mb-12 text-center flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-9 h-9 mr-4 text-cyan-400" viewBox="0 0 24 24" fill="currentColor">
        <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
      </svg>
      Đội ngũ GSGA Fansub
    </h1>

    <!-- Core Members Section -->
    <h2 class="text-3xl font-bold text-cyan-400 mb-6 border-b border-cyan-400/30 pb-3 flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10s10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8s8 3.59 8 8s-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/></svg>
      Thành viên chính thức
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
      {coreMembers.map(member => (
        <div class="bg-slate-800/70 rounded-xl shadow-lg flex overflow-hidden">
          {/* Avatar Column */}
          <div class="w-24 aspect-[3/4] flex-shrink-0 bg-slate-700 rounded-l-xl">
            {member.avatar ? (
              <img src={member.avatar} alt={member.name} class="w-full h-full object-cover" />
            ) : (
              <svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full text-slate-500 p-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            )}
          </div>
          {/* Info Column */}
          <div class="flex flex-col flex-grow p-4">
            <div class="flex-grow">
              <h3 class="text-lg font-bold text-white">{member.name}</h3>
              {member.role && <p class="text-cyan-400 text-sm font-light">{member.role}</p>}
            </div>
            {member.socials && (
              <div class="flex items-center gap-3 pt-3 border-t border-slate-700">
                {Object.entries(member.socials).map(([name, url]) => (
                  url && (
                    <a href={url} target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-white transition-colors" title={name.charAt(0).toUpperCase() + name.slice(1)}>
                      <SocialIcon name={name} className="w-5 h-5" />
                    </a>
                  )
                ))}
              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- External Members Section -->
    {externalMembers.length > 0 && (
      <>
        <h2 class="text-3xl font-bold text-cyan-400 mb-6 border-b border-cyan-400/30 pb-3 flex items-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10s10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8s8 3.59 8 8s-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/></svg>
          Thành viên/nhóm bên ngoài
        </h2>
        <div class="flex flex-wrap gap-3 justify-center">
          {externalMembers.map(member => (
            <a
              href={member.memberUrl}
              target="_blank"
              rel="noopener noreferrer"
              class:list={[
                "px-4 py-2 rounded-full text-lg transition-colors flex items-center gap-2",
                member.highlight
                  ? "bg-sky-400/20 text-sky-300 hover:bg-sky-400/30 border border-sky-400/50"
                  : "bg-gray-700/50 text-blue-300 hover:bg-gray-700"
              ]}
            >
              {member.name}
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M10 6v2h5.59L4 19.59L5.41 21L17 9.41V15h2V6z"/></svg>
            </a>
          ))}
        </div>
      </>
    )}
  </div>
</Layout>
