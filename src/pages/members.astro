---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';


const allMembers = await getCollection('members');
---

<Layout title="Thành viên | GSGA Fansub">
  <div class="max-w-3xl mx-auto py-12 px-4">
    <h1 class="text-4xl font-bold text-white mb-8 text-center flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-9 h-9 mr-4 text-cyan-400" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 15H9v-2h2v2zm0-4H9V7h2v6zm4 0h-2V7h2v6z"/>
      </svg>
      Đội ngũ GSGA Fansub
    </h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {allMembers.map(member => (
        <div class="bg-gray-800/50 p-6 rounded-lg shadow-lg flex flex-col items-center text-center">
          <h2 class="text-2xl font-bold text-cyan-400 mb-2">{member.data.name}</h2>
          {member.data.role && <p class="text-gray-400 text-lg mb-4">{member.data.role}</p>}
          {member.data.githubUrl && (
            <a 
              href={member.data.githubUrl} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-blue-400 hover:underline flex items-center gap-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</Layout>
